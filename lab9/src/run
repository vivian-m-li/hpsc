rm *.plt

#--------------------------------------------------------------------------------------------------------
# REGULAR OPTION:
#--------------------------------------------------------------------------------------------------------

mpirun -n 4 ./solvers -nPEx 2 -nPEy 2 -nCellx 20 -nCelly 20 -solver cg -nl sa -c0 5. -tau 1. -r .8 | tee  tmp
mpirun -n 4 ./solvers -nPEx 2 -nPEy 2 -nCellx 20 -nCelly 20 -solver cg -nl nr -c0 5. -tau 1. -r .3 | tee  tmp

#--------------------------------------------------------------------------------------------------------
# VALGRIND OPTION:
#--------------------------------------------------------------------------------------------------------

#mpirun -n 1 valgrind --track-origins=yes ./solvers -nPEx 1 -nPEy 1 -nCellx 20 -nCelly 20 -solver cg -nl nr -c0 5. -tau 1. -r .3 | tee  tmp

#--------------------------------------------------------------------------------------------------------
# DEBUG FILES:
#--------------------------------------------------------------------------------------------------------

rm -f *.sed
rm -f 0 1 2 3

grep 'myPE: 0' tmp > 0.sed  ; sed s/'myPE: 0'/''/g 0.sed > 0
grep 'myPE: 1' tmp > 1.sed  ; sed s/'myPE: 1'/''/g 1.sed > 1
grep 'myPE: 2' tmp > 2.sed  ; sed s/'myPE: 2'/''/g 2.sed > 2
grep 'myPE: 3' tmp > 3.sed  ; sed s/'myPE: 3'/''/g 3.sed > 3



